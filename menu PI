import java.util.Scanner;

public class Principal {
	//MENU DEL TRABAJADOR
	public static int menu_trabajador(){   
		int opcion = 0;
		String registro = "Acceso al menu del empleado";
		Scanner teclado = new Scanner(System.in);

		//Mostramos menu donde el usuario
		System.out.print(
				"\n" +
						"*-*-*-*-*-*CUPONIC*-*-*-*-*-*\n" +
						"  1 - Registrar cliente\n" +
						"  2 - Alta usuario\n" +
						"  3 - Buscar promociones\n" +
						"  4 - guardar productos\n" +
						"  5 - eliminar productosma\n" +
						"  6 - Mostrar precios de usuario\n" +
						"  7 - Crear lista de la compra\n" +
						"  0 - Salir del programa\n" +
						"UEM" + "\n"

				);
		// recoge la opcion y asegura que se introduce un integer
		if (teclado.hasNextInt()) {
			opcion = teclado.nextInt();
		}
		else {
			teclado.next(); // Vaciar la basura (no int) del teclado...
		}
		//Se devuelve el valor de 'opcion' a main()
		return opcion;
	}

	//MENU DEL ADMINISTRADOR
	public static int menu_admin(){   //FunciÃ³n menu interactivo
		int opcion = 0;
		String registro = "Acceso al menÃº administrador";
		Scanner teclado = new Scanner(System.in);

		//Mostramos menu del administrador
		System.out.print(
				"\n" +
						"*-*-*-*-*-*CUPONIC*-*-*-*-*-*\n" +
						"  1 - Registrar\n" +
						"  2 - Alta administrador\n" +
						"  3 - Buscar promociones\n" +
						"  4 - dar de alta promociones\n" +
						"  5 - Dar de baja promociones\n" +
						"  6 - Consultar log\n" +
						"  0 - Salir del programa\n" +
						"UEM" + "\n"

				);
		// recoge la opciÃ³n y asegura que se introduce un integer
		if (teclado.hasNextInt()) {
			opcion = teclado.nextInt();
		}
		else {
			teclado.next(); // Vaciar la basura (no int) del teclado...
		}


		//Se devuelve el valor de 'opcion' a main()
		return opcion;

	}
	public static void main(String[] args) {
		int opcion_menu_admin = 0;
		while(opcion_menu_admin!=8) {
			opcion_menu_admin = menu_admin();
			switch (opcion_menu_admin) {    //Menu interactivo
			case 1:
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				break;
			case 5:
				break;
			case 6:
				break;
			case 7:
				break;
			case 0:
				System.out.println("has salido del programas");
				break;
			default:
				System.out.println("Error: Valor no valido. Volviendo al menu...");
				main(null);


			}

		}
		int opcion_menu_trabajador = 0;
		while(opcion_menu_trabajador != 8) {
			switch (menu_trabajador()) {    
			case 1:
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				break;
			case 5:
				break;
			case 6:
				break;
			case 7:
				break;
			case 0:
				System.out.println("has salido del programas");
				break;
			default:
				System.out.println("Error: Valor no valido. Volviendo al menu...");
				main(null);
			}}}
}
